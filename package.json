{
  "name": "my-lib",
  "version": "0.0.0",
  "license": "MIT",
  "packageScope": "@my-lib",
  "packages": ["packages/core", "packages/common"],
  "scripts": {
    "ng": "ng",
    "test": "npm run link-dev && ng test --preserve-symlinks",
    "lint": "npm run link-dev && ng lint --type-check",
    "build": "ng build --prod --preserve-symlinks",
    "link-dev": "ts-node tools/link-dev",
    "serve:dev": "npm run link-dev && ng serve --preserve-symlinks",
    "serve:packaged": "npm run package && ng serve --preserve-symlinks",
    "package": "ts-node tools/package",
    "release":
      "npm run package && ts-node ./tools/set-version && ts-node ./tools/build-binary",
    "clean": "ts-node ./tools/clean"
  },
  "private": true,
  "devDependencies": {
    "@angular/cli": "~1.6.0",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@types/fs-extra": "^4.0.3",
    "@types/googlemaps": "^3.29.2",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.0",
    "core-js": "^2.4.1",
    "fs-extra": "^4.0.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~6.3.14",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "2.0.0",
    "prettier": "^1.8.2",
    "rxjs": "^5.5.2",
    "ts-node": "~3.2.0",
    "tslint": "^5.8.0",
    "typescript": "~2.4.2",
    "zone.js": "^0.8.17"
  }
}
